<?xml version="1.0" encoding="utf-8"?>
<com.codecoy.securecalculator.files.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_bacground"
    android:padding="15.0dip">

    <ImageView
        android:id="@id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5.0dip"
        android:layout_toLeftOf="@+id/myCheckBox"
        android:layout_toRightOf="@id/img"
        android:textColor="@color/white" />

    <CheckBox
        android:id="@+id/myCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:backgroundTint="@color/app_color"
        android:button="@drawable/ic_baseline_check_box_outline_blank_24"
        android:buttonTint="@color/app_color"
        android:clickable="false"
        android:drawableTint="@color/white"
        android:focusable="false" />
</com.codecoy.securecalculator.files.CheckableRelativeLayout>
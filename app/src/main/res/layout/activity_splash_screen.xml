<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c7d3ec"
    tools:context="com.codecoy.securecalculator.activities.SplashScreen">


    <com.facebook.ads.NativeAdLayout
        android:id="@+id/nativeAdContainerId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvSplashScreenId"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center"
            android:src="@drawable/app_logo" />
    </LinearLayout>


    <TextView
        android:id="@+id/tvSplashScreenId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_above="@id/version_txt"
        android:gravity="center"
        android:text="Security Gallery"
        android:textColor="@color/blue"
        android:textSize="@dimen/_30sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/version_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="77dp"
        android:gravity="center"
        android:text="Version 2.1.0"
        android:textColor="@color/blue"
        android:textSize="@dimen/_12sdp"
        android:textStyle="italic" />
</RelativeLayout>